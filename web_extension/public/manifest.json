{
  "manifest_version": 3,
  "name": "TruthChain",
  "version": "1.0.0",
  "description": "Verify and protect your digital content authenticity on the blockchain. Register content ownership and detect unauthorized modifications with TruthChain's decentralized provenance system.",
  "author": "TruthChain Team",
  
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "notifications"
  ],
  
  "host_permissions": [
    "https://*.medium.com/*",
    "https://*.substack.com/*",
    "https://*.dev.to/*",
    "https://*.hashnode.com/*",
    "https://*.mirror.xyz/*",
    "https://*.linkedin.com/*",
    "https://*.github.io/*",
    "https://*.ghost.io/*",
    "https://*.notion.site/*",
    "https://*.wordpress.com/*",
    "https://*.blogspot.com/*",
    "https://*.google.com/*",
    "https://*.youtube.com/*",
    "https://*.github.com/*",
    "https://*.x.com/*",
    "https://*.twitter.com/*"
  ],
  
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  
  "content_scripts": [
    {
      "matches": [
        "https://*.medium.com/*",
        "https://*.substack.com/*",
        "https://*.dev.to/*",
        "https://*.hashnode.com/*",
        "https://*.mirror.xyz/*",
        "https://*.linkedin.com/*",
        "https://*.github.io/*",
        "https://*.ghost.io/*",
        "https://*.notion.site/*",
        "https://*.wordpress.com/*",
        "https://*.blogspot.com/*",
        "https://*.google.com/*",
        "https://*.youtube.com/*",
        "https://*.github.com/*",
        "https://*.x.com/*",
        "https://*.twitter.com/*"
      ],
      "js": ["content-script.js"],
      "run_at": "document_idle",
      "all_frames": false
    },
    {
      "matches": [
        "https://*.medium.com/*",
        "https://*.substack.com/*",
        "https://*.dev.to/*",
        "https://*.hashnode.com/*",
        "https://*.mirror.xyz/*",
        "https://*.linkedin.com/*",
        "https://*.github.io/*",
        "https://*.ghost.io/*",
        "https://*.notion.site/*",
        "https://*.wordpress.com/*",
        "https://*.blogspot.com/*",
        "https://*.google.com/*",
        "https://*.youtube.com/*",
        "https://*.github.com/*",
        "https://*.x.com/*",
        "https://*.twitter.com/*"
      ],
      "js": ["page-script.js"],
      "run_at": "document_start",
      "world": "MAIN"
    }
  ],
  
  "action": {
    "default_popup": "index.html",
    "default_title": "TruthChain",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'; style-src 'self' 'unsafe-inline'; connect-src 'self' https://*.stacks.co https://*.hiro.so https://*.web3.storage https://*.ipfs.io https://api.testnet.hiro.so https://stacks-node-api.testnet.stacks.co https://api.mainnet.hiro.so https://stacks-node-api.mainnet.stacks.co;",
    "sandbox": "sandbox allow-scripts allow-forms allow-popups allow-modals; script-src 'self' 'unsafe-inline' 'unsafe-eval'; child-src 'self';"
  },
  
  "web_accessible_resources": [
    {
      "resources": [
        "assets/*",
        "*.png",
        "*.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  
  "externally_connectable": {
    "matches": [
      "https://explorer.stacks.co/*",
      "https://explorer.hiro.so/*",
      "https://truth-chain.vercel.app/*"
    ]
  },
  
  "commands": {
    "bridge-content": {
      "suggested_key": {
        "default": "Ctrl+Shift+B",
        "mac": "Command+Shift+B"
      },
      "description": "Store contents on the blockchain"
    },
    "verify-content": {
      "suggested_key": {
        "default": "Ctrl+Shift+V",
        "mac": "Command+Shift+V"
      },
      "description": "Verify content on blockchain"
    }
  },
  
  "homepage_url": "https://truth-chain.vercel.app/",
  
  "minimum_chrome_version": "88",
  
  "short_name": "TruthChain",
  "offline_enabled": false,
  
  "incognito": "split",
  
  "update_url": "https://clients2.google.com/service/update2/crx",
  
  "options_ui": {
    "page": "index.html",
    "open_in_tab": false
  }
}
