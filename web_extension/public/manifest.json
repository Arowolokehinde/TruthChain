{
  "manifest_version": 3,
  "name": "Blog2Block - Web2 to Web3 Bridge",
  "version": "1.0.0",
  "description": "Bridge your web2 content to web3 using Stacks blockchain and decentralized storage.",
  "author": "TruthChain Team",
  
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "notifications",
    "tabs"
  ],
  
  "host_permissions": [
    "https://*.medium.com/*",
    "https://*.substack.com/*",
    "https://*.dev.to/*",
    "https://*.hashnode.com/*",
    "https://*.mirror.xyz/*",
    "https://*.linkedin.com/*"
  ],
  
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  
  "content_scripts": [
    {
      "matches": [
        "https://*.medium.com/*",
        "https://*.substack.com/*",
        "https://*.dev.to/*",
        "https://*.hashnode.com/*",
        "https://*.mirror.xyz/*",
        "https://*.linkedin.com/*"
      ],
      "js": ["content-script.js"],
      "run_at": "document_idle"
    }
  ],
  
  "action": {
    "default_popup": "index.html",
    "default_title": "TruthChain",
    "default_icon": {
      "16": "Truthchain.jpeg",
      "32": "Truthchain.jpeg",
      "48": "Truthchain.jpeg",
      "128": "Truthchain.jpeg"
    }
  },
  
  "icons": {
    "16": "Truthchain.jpeg",
    "32": "Truthchain.jpeg",
    "48": "Truthchain.jpeg",
    "128": "Truthchain.jpeg"
  },
  
  "content_security_policy": {
    "extension_pages": "script-src 'self' https://unpkg.com; object-src 'self'; style-src 'self' 'unsafe-inline';"
  },
  
  "web_accessible_resources": [
    {
      "resources": [
        "assets/*",
        "Truthchain.jpeg",
        "*.js",
        "*.wasm"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  
  "externally_connectable": {
    "matches": [
      "https://explorer.stacks.co/*",
      "https://explorer.hiro.so/*",
      "https://*.web3.storage/*",
      "https://*.ipfs.io/*",
      "https://unpkg.com/*"
    ]
  },
  
  "commands": {
    "bridge-content": {
      "suggested_key": {
        "default": "Ctrl+Shift+B",
        "mac": "Command+Shift+B"
      },
      "description": "Bridge current content to Web3"
    },
    "verify-content": {
      "suggested_key": {
        "default": "Ctrl+Shift+V",
        "mac": "Command+Shift+V"
      },
      "description": "Verify content on blockchain"
    }
  },
  
  "homepage_url": "https://truth-chain.vercel.app/",
  
  "minimum_chrome_version": "88"
}
